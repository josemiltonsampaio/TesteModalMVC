@model List<OrcamentoDespesa>
@foreach (var item in Model)
{
    <div>@item.Id - @item.Observacao </div>
}

<div class="row">
    <div class="col-sm-1">
        <!-- text input -->
        <div class="form-group">
            <label style="width: 100px">Função</label>
            <input type="text" class="form-control" id="grupoDespesaIdFuncao" onchange="buscaFuncao()">
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <label style="visibility:hidden">0</label>
            <div class="input-group mb-3">
                <input type="text" class="form-control" disabled="disabled" id="grupoDespesaFuncao">
                <a onclick="showInPopup('@Url.Action("Index","Pesquisa",null,Context.Request.Scheme)','Funções','grupoDespesaIdFuncao','buscaFuncao()')" class="btn btn-success text-white"><i class="fas fa-random"></i>Pesquisa Função</a>
            </div>
            
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="form-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>

<script>
    const buscaFuncao = () => {

        const idFuncao = $("#grupoDespesaIdFuncao").val();
        $.ajax({
            url: "/Funcao/ObterFuncaoPorId?id=" + idFuncao,
            context: document.body
        }).done(function (resultado) {
            console.log(resultado)
            if (!resultado.id || resultado.id == undefined) {
                $("#grupoDespesaIdFuncao").val("");
                $("#grupoDespesaFuncao").addClass("is-invalid campoInvalido");
                $("#grupoDespesaFuncao").val("SubFunção não encontrada");
            } else {
                $("#grupoDespesaFuncao").removeClass("is-invalid campoInvalido");
                $("#grupoDespesaFuncao").val(resultado.descricao);
            }

        });

    }
</script>